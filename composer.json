{
    "name": "hamster/hamster-core",
    "description": "The Hamster Core",
    "keywords": [
        "php",
        "hamster"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "jdmake",
            "email": "jdmake@qq.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.8",
        "phpunit/phpunit": "^8.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Hamster\\": "lib/Hamster"
        }
    }
}
